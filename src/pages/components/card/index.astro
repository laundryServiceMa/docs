---
interface Props {
  title: string;
  description: string;
  image?: string;
  imageAlt?: string; // Optional alt text for the image
}

const { title, description, image, imageAlt = title } = Astro.props;
---

<style>
  .card {
    margin: 1rem;
    border-radius: 0.75rem;
    overflow: hidden; /* Ensure image doesn't overflow rounded corners */
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition:
      transform 0.2s ease-in-out,
      box-shadow 0.2s ease-in-out;
    background-color: var(--card-background-color);
    color: var(--text-color);
    display: flex;
    flex-direction: column;
    max-height: fit-content;
    /* height: 100%; Ensure the card fills its container vertically */
  }

  .card:hover,
  .card:focus {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
  }

  .card-image-container {
    position: relative;
    width: 100%; /* Make the image fill the card width */
    aspect-ratio: 16 / 9; /* Maintain a 16:9 aspect ratio */
    overflow: hidden;
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Cover the container, cropping if necessary */
    display: block; /* Remove extra space below image */
  }

  .card-content {
    padding: 1.5rem;
    flex: 1; /* Allow content to grow and fill available space */
    display: flex;
    flex-direction: column;
  }

  .card-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 0.75rem;
  }

  .card-description {
    font-size: 1rem;
    line-height: 1.4;
  }
  .card-description :global(p) {
    margin-bottom: 1rem;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --card-background-color: #333;
    }
  }

  @media (prefers-color-scheme: light) {
    :root {
      --card-background-color: #fff;
    }
  }
</style>

<div class="card">
  <div class="card-image-container">
    {image && <img src={image} alt={imageAlt} class="card-image" />}
  </div>
  <div class="card-content">
    <h3 class="card-title">{title}</h3>
    <div class="card-description">
      {description}
    </div>
  </div>
</div>
